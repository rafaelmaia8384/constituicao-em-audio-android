<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.smarttools.constituicaoemaudio.PlayerActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="20dp"
        android:padding="20dp"
        android:background="@drawable/background_player"
        android:orientation="vertical">

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/smarttools256"/>

            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Smart Tools"
                    android:textColor="@color/colorGray"
                    android:textSize="22sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ferramentas para ideias inteligentes"
                    android:textColor="@color/colorAccent"
                    android:textSize="12sp"/>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Este aplicativo foi desenvolvido com o objetivo de auxiliar na assimilação de conteúdo jurídico baseado no Plano de Acessibilidade do Senado Federal."
            android:textColor="@color/colorGray"
            android:textSize="15sp"/>

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Todos os áudios contidos neste software são de uso irrestrito, licenciados para o uso não exclusivo de pessoas portadoras de deficiência visual."
            android:textColor="@color/colorGray"
            android:textSize="15sp"/>

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lei complementar nº 142 de 8 de Maio de 2013 e Lei nº 12.764 de 2 de Dezembro de 2012."
            android:textColor="@color/colorGray"
            android:textSize="15sp"/>

    </LinearLayout>

</RelativeLayout>
