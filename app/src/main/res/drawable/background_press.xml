<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">

        <shape>
            <corners
                android:radius="5dp" />
            <solid android:color="@color/colorAccent"/>
        </shape>

    </item>

    <item android:state_enabled="true">

        <shape>
            <corners
                android:radius="5dp" />
            <solid android:color="#eeeeee"/>
        </shape>

    </item>
</selector>